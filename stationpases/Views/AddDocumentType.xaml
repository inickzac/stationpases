<Window x:Class="stationpases.Views.AddDocumentType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:stationpases.Views"
        mc:Ignorable="d"
        Title="AddDocumentType" Height="450" Width="800">
    <StackPanel>
        <StackPanel>
            <TextBlock Text="{Binding ValueName}"></TextBlock>
            <TextBox Text="{Binding Value}"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" MinHeight="30" >
            <Button Content="Сохранить" Command="{Binding SaveInBD}"></Button>
            <Button Content="Отмена" Margin="20,0,0,0"></Button>
        </StackPanel>
    </StackPanel>
</Window>
